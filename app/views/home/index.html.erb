This is home controller

<% if current_user %>
<div id="friends">
	<p>
		<%= link_to 'Invite your facebook friends', '#', :id => 'invite_fb_friends' %>
	</p>
	<div id="fb-root"></div>
	<script src="http://connect.facebook.net/en_US/all.js"></script> 
	<script type="text/javascript">
		$(function(){
			$('a#invite_fb_friends').click(function() {
				FB.init({ 
					appId : '139850259434486', 
					status : true, 
					cookie : false
				});

				FB.ui({method: 'apprequests', 
					message: '<% current_user.name %> wants your help in making a decision',
					redirect_uri: 'http://127.0.0.1:300/accept' 
					//to: user_id, 
				}); 
			});
			});
	</script>
</div>
<% end %>