<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "SocialKart", root_path, id: "logo", class: "brand"  %>
      <nav>
        <ul class="nav pull-right">
          <% if current_user %>
            <li><%= link_to current_user.name, root_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <b class="caret"></b>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Signout", signout_path, tabindex: "-1" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign up with Facebook", "/auth/facebook" %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
